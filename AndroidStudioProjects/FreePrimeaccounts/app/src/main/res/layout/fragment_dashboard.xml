                        android:layout_height="25dp"
                        android:layout_marginTop="16dp"
                        android:drawableRight="@drawable/dollar"
                        android:text="750"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <!-- Buttons -->


            </LinearLayout>

